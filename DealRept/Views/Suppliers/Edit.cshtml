@model SupplierViewModel

@{
    ViewBag.Title = "Suppliers/Edit";
}


@section Header{
    <div class="orangeLink dirtyLink">
        <a class="px-1 pb-1" asp-action="Index" data-target="#dirtyCheckModalIndex"><i class="fi-xnluhl-handshake-thin"></i> Suppliers</a> <span class="lead align-middle text-nowrap">&sol; Edit a Supplier</span>
    </div>
}

@*Main*@
<section id="main">
    <div class="container">
        @*Upper Button Panel*@
        <section id="upperPanelButton">
            <div class="row">
                <div class="col-12 px-1 px-md-0">
                    <div class="card my-2">
                        <div class="card-header d-flex justify-content-center bg-white py-1">
                            <span data-toggle="tooltip" data-trigger="hover" data-placement="top" title="To suppliers" class="dirtyLink">
                                <a asp-action="Index" data-target="#dirtyCheckModalIndex"
                                   class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                    <i class="fi-xnllx2-arrow-simple"></i>
                                </a>
                            </span>
                            <a asp-action="Edit" class="scaleIcon btn-link btn p-0 mr-1 text-warning"
                               data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Discard changes">
                                <i class="fi-xnlux2-times"></i>
                            </a>
                            <a href="#downPanelButton"
                               data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Down"
                               class="scaleIcon btn btn-link p-0 mr-1 text-primary">
                                <i class="fi-xnldx2-arrow-simple"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        @*Create*@

        <form asp-action="Edit" method="post" class="dirty-check font-weight-light">
            <div asp-validation-summary="ModelOnly" class="text-justify validationSummary"></div>
            <input type="hidden" asp-for="Supplier.ID" />
            <div class="row">
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card h-100 card-body mr-lg-1 shadowBox bodyCreate">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="Supplier.Name" class="font-weight-light"></label>
                                <input asp-for="Supplier.Name" type="text" class="form-control pl-md-3">
                                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Supplier.LegalCode"></label>
                                <input asp-for="Supplier.LegalCode" type="text" readonly data-toggle="tooltip" data-placement="top"
                                       title="You can`t edit legal code." class="form-control enabledTooltipOnTouch">
                                <span asp-validation-for="Supplier.LegalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Supplier.SpecializationID"></label>
                                <select style="width:100%;" id="supplierSpecializationsSelect"
                                        asp-for="Supplier.SpecializationID"
                                        asp-items="@Model.Specializations"
                                        class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card h-100 card-body ml-lg-1 shadowBox bodyCreate">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Supplier.CompanyTelephone"></label>
                                <input asp-for="Supplier.CompanyTelephone" type="tel" class="form-control pl-md-3 enabledTooltipOnTouch"
                                       data-toggle="tooltip" data-placement="top" title="Allowed format: +38XXXXXXXXXX, length:13">
                                <span asp-validation-for="Supplier.CompanyTelephone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Supplier.CompanyEmail"></label>
                                <input asp-for="Supplier.CompanyEmail" type="email" class="form-control pl-md-3">
                                <span asp-validation-for="Supplier.CompanyEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class=" form-row">
                            <div class="form-group col">
                                <label asp-for="Supplier.NegativeRemarks"></label>
                                <textarea asp-for="Supplier.NegativeRemarks" class="form-control text-justify enabledTooltipOnTouch" rows="1"
                                          data-toggle="tooltip" data-placement="top" title="Please enter Negative Remarks, only if you have them"></textarea>
                                <span asp-validation-for="Supplier.NegativeRemarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                @*Director*@
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card h-100 card-body mr-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead">
                                Director
                            </legend>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.DirectorFirstName"></label>
                                    <input asp-for="Supplier.DirectorFirstName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Supplier.DirectorFirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.DirectorMiddleName"></label>
                                    <input asp-for="Supplier.DirectorMiddleName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Supplier.DirectorMiddleName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.DirectorLastName"></label>
                                    <input asp-for="Supplier.DirectorLastName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Supplier.DirectorLastName" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                @*Legal Address*@
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card h-100 card-body ml-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead">Legal Address</legend>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.PostalIndex"></label>
                                    <input asp-for="Supplier.PostalIndex" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Supplier.PostalIndex" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.CityID"></label>
                                    <select style="width:100%;" id="citySelect"
                                            asp-for="Supplier.CityID"
                                            asp-items="@Model.Cities"
                                            class="form-control">
                                    </select>
                                    <span asp-validation-for="Supplier.CityID" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Supplier.StreetBuilding"></label>
                                    <input asp-for="Supplier.StreetBuilding" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Supplier.StreetBuilding" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="row">
                @*Bank Details*@
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card card-body mr-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead">Bank Details</legend>
                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label asp-for="Supplier.BankID"></label>
                                    <select style="width:100%;" id="bankSelect"
                                            asp-for="Supplier.BankID"
                                            asp-items="@Model.Banks"
                                            class="form-control">
                                    </select>
                                    <span asp-validation-for="Supplier.BankID" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-7">
                                    <label asp-for="Supplier.BankAccount"></label>
                                    <input asp-for="Supplier.BankAccount" type="text" class="form-control pl-md-3 enabledTooltipOnTouch"
                                           data-toggle="tooltip" data-placement="top" title="Allowed format: UAXXXXXXXXXXXXXXXXXXXXXXXXX, length: 29 characters">
                                    <span asp-validation-for="Supplier.BankAccount" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                @*Contact Person*@
                <div class="col-lg-6 px-1 px-md-0 mb-2">
                    <div class="card card-body ml-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead whiteLinkButton">
                                <span class="enabledTooltipOnTouch" data-toggle="tooltip" data-trigger="hover" data-placement="top" title="Please enter Contact Person Details, only if you have them">
                                    <a href="#contactInputCollapse" class="dropdown-toggle text-white-50 lead p-1" data-toggle="collapse" role="button"
                                       aria-expanded="false">Contact Person Details</a>
                                </span>
                            </legend>
                            <div id="contactInputCollapse" class="collapse
                                 @((Model.Supplier.ContactFirstName!=default||Model.Supplier.ContactMiddleName!=default
        ||Model.Supplier.ContactLastName!=default||Model.Supplier.ContactTelephone!=default
        ||Model.Supplier.ContactEmail!=default)?"show":"")">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Supplier.ContactFirstName"></label>
                                        <input asp-for="Supplier.ContactFirstName" type="text" class="form-control pl-md-3">
                                        <span asp-validation-for="Supplier.ContactFirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Supplier.ContactMiddleName"></label>
                                        <input asp-for="Supplier.ContactMiddleName" type="text" class="form-control pl-md-3">
                                        <span asp-validation-for="Supplier.ContactMiddleName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Supplier.ContactLastName"></label>
                                        <input asp-for="Supplier.ContactLastName" type="text" class="form-control pl-md-3">
                                        <span asp-validation-for="Supplier.ContactLastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Supplier.ContactTelephone"></label>
                                        <input asp-for="Supplier.ContactTelephone" type="tel" class="form-control pl-md-3 enabledTooltipOnTouch"
                                               data-toggle="tooltip" data-placement="top" title="Allowed format: +38XXXXXXXXXX, length:13">
                                        <span asp-validation-for="Supplier.ContactTelephone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Supplier.ContactEmail"></label>
                                        <input asp-for="Supplier.ContactEmail" type="email" class="form-control pl-md-3">
                                        <span asp-validation-for="Supplier.ContactEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            @*Down Pannel Button*@
            <section id="downPanelButton">
                <div class="row">
                    <div class="col-12 px-1 px-md-0">
                        <div class="card mb-4">
                            <div id="cardFooter" class="card-header d-flex justify-content-center bg-white py-1">
                                <span data-toggle="tooltip" data-trigger="hover" data-placement="top" title="To suppliers" class="dirtyLink">
                                    <a asp-action="Index" data-target="#dirtyCheckModalIndex"
                                       class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                        <i class="fi-xnllx2-arrow-simple"></i>
                                    </a>
                                </span>
                                <button type="submit" class="scaleIcon btn btn-link text-success p-0 mr-0"
                                        data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Save changes to the supplier">
                                    <span role="img" class="p-1 pb-2">
                                        <svg fill="#20c975" width="26px" height="26px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1827.701 303.065 698.835 1431.801 92.299 825.266 0 917.564 698.835 1616.4 1919.869 395.234z" fill-rule="evenodd" />
                                        </svg>
                                    </span>
                                </button>
                                <a href="#upperPanelButton" data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Up"
                                   class="scaleIcon btn btn-link p-0 text-primary ml-1">
                                    <i class="fi-xwlux2-arrow-simple"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</section>

@*Modals*@
@{await Html.RenderPartialAsync("_ModalDirtyChecklPartial", new ModelForDirtyCheckModal { ID = "dirtyCheckModalIndex", Controller = "Suppliers", Action = "Index", Entity = "Supplier" });}


