@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script defer src="/js/friconix.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/cite.css" />

    <link href='https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@@5.13.1/css/all.css' rel='stylesheet'/>

    <link rel="shortcut icon" href="/images/logoFin.ico"
          type="image/x-icon" />



    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbarPrimary navbar navbar-expand-lg navbar-light bg-white p-0 pl-2">
        <div class="container">
            <div class="align-self-center">
                <a asp-controller="Home" asp-action="Index" class="scaleNavbarBrand navbar-brand px-1 mr-0 mt-3 mt-md-2">
                    <img alt="Deal#Rept" class="img-fluid rounded float-right" src="/images/brand.svg" />
                </a>
            </div>
            <button id="barToggler" class="navbar-toggler text-primary" data-toggle="collapse" data-target="#navbarCollapse">
                <i class="fi-xnlux2-three-bars"></i>
            </button>
            <div class="collapse navbar-collapse mt-md-1" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a asp-controller="Home" asp-action="Index" is-active-route
                           class="nav-link text-primary">Home</a>
                    </li>
                    <li class="nav-item px-2">
                        <a asp-controller="Contracts" asp-action="Index" is-active-route
                           class="nav-link text-primary">Contracts</a>
                    </li>
                    <li class="nav-item px-2">
                        <a asp-controller="Suppliers" asp-action="Index" is-active-route class="nav-link text-primary">Suppliers</a>
                    </li>
                    <li class="nav-item px-2">
                        <a asp-controller="Branches" asp-action="Index" is-active-route class="nav-link text-primary">Branches</a>
                    </li>
                    <li class="nav-item dropdown px-2">
                        <a is-active-route class="nav-link text-primary dropdown-toggle auxiliaries"
                           href="#" role="button" data-toggle="dropdown" aria-expanded="false">Auxiliaries</a>
                        <div class="dropdown-menu p-md-1 dropDownLink">
                            <a is-active-route class="text-primary dropdown-item mb-md-1" asp-controller="Cities" asp-action="Index">Cities</a>
                            <a is-active-route class="text-primary dropdown-item" asp-controller="Banks" asp-action="Index">Banks</a>
                        </div>
                    </li>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                    {
                        <li class="nav-item px-2">
                            <a asp-controller="Users" asp-action="Index" is-active-route class="nav-link text-primary">Users</a>
                        </li>
                    }
                </ul>
                @{await Html.RenderPartialAsync("_LoginPartial");}
            </div>
        </div>
    </nav>

    <!--HEADER-->

    <header id="main-header" class="bg-white ">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-primary display-4">
                        @RenderSection("Header", false)
                    </h1>
                </div>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <div class="margin_for_footer">
        <footer id="main-footer" class="bg-white footer text-primary">
            <div class="container">
                <div class="row">
                    <div class="col text-center">
                        Copyright &copy;
                        <span id="year"></span>
                        <span class="text-primary">Deal</span><span class="text-success">#</span><span class="text-warning">Rept</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)

    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js" integrity="sha512-IFD8s8Ds5M/7XsAQXNXtHVdiA8EnBR6bZhy0R+Y7fruej9fNPkrZ6+0/dP8yfRU1u2x9De4WYGCNvoaIhmhnpg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@fullcalendar/bootstrap@@6.1.10/index.global.min.js" integrity="sha256-ad49/MPAELPf/HGzKuBuRJ/F53St9/sYcD/c5q/Vsoo=" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script src="~/js/cite.js"></script>

    <environment include="Development">
        <script type="text/javascript">
            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);
            }
        </script>
    </environment>
</body>
</html>

