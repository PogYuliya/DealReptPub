@model ModelForDirtyCheckModal

<div class="modal fade" id="@Model.ID" tabindex="-1" aria-labelledby="dirtyCheckModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning font-weight-normal lead" id="dirtyCheckModalLabel">Save changes!</h5>
                <button type="button" class="close scaleIcon focusWarning" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-warning">&times;</span>
                </button>
            </div>
            <div class="modal-body text-primary">
                You`ve made changes to the @Model.Entity. Not to lose them, you must first save changes!
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button"
                class="btn btn-link font-weight-light px-4 text-white text-uppercase btn-modal-success mr-4"
                        data-dismiss="modal">Save</button>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-id="@Model.RouteData"
                   class="btn btn-link font-weight-light px-3 text-white text-uppercase btn-modal-warning ml-4">Discard</a>
            </div>
        </div>
    </div>
</div>
