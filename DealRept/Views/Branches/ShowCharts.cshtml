@{
    ViewBag.Title = "Branches/Charts";
}

@section Header{
    <div class="orangeLink">
        <a class="px-1 pb-1" asp-action="Index"><i class="fi-xnluxl-data-structure-thin"></i> Branches</a> <span class="lead align-middle text-nowrap">&sol; Branch Charts</span>
    </div>
}


<section id="main">
    <div class="container">

        @*Upper Button Panel*@
        <section id="upperPanelButton">
            <div class="row">
                <div class="col px-1 px-md-0">
                    <div class="card my-2">
                        <div class="card-header d-flex justify-content-center bg-white py-1">
                            <a asp-action="Index" data-toggle="tooltip" data-placement="top" data-trigger="hover" title="To branches"
                               class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                <i class="fi-xnllx2-arrow-simple"></i>
                            </a>
                            <button id="branchChartButton" type="button" class="scaleIcon btn btn-link text-success p-0 mr-0"
                                    data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Show charts">
                                <span role="img" class="p-1 pb-2">
                                    <svg fill="#20c975" width="26px" height="26px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M1827.701 303.065 698.835 1431.801 92.299 825.266 0 917.564 698.835 1616.4 1919.869 395.234z" fill-rule="evenodd" />
                                    </svg>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="errorMessage">
        </section>

        @*Data for charts*@
        <section id="chartData">
            <div class="row">
                <div class="col-md-12 px-1 p-md-0 mb-2">
                    <div class="card card-body shadowBox bodyCreate p-3">
                        <form id="chartDataForm">
                            <div class="form-row justify-content-around">
                                <div class="custom-control custom-radio mb-2 mb-md-0">
                                    <input id="radioBtn1" type="radio" checked name="isPastContractIncluded" class="custom-control-input" value="false" />
                                    <label class="custom-control-label" for="radioBtn1">Only current contracts</label>
                                </div>
                                <div class="custom-control custom-radio mb-2 mb-md-0">
                                    <input id="radioBtn2" type="radio" name="isPastContractIncluded" class="custom-control-input" value="true" />
                                    <label class="custom-control-label" for="radioBtn2">Current and past contracts</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>


        @*Charts*@
        <section id="charts">
            <div class="row">
                <div class="col-lg-6 px-1 p-md-0 mb-2">
                    <div class="card card-body h-100 mr-lg-1 shadowBox py-0 px-0">
                        <div id="chartViewLeft" class="p-0 m-0">
                            <div class="chart-container doughnutChartContainer">
                                <canvas id="branchChartLeft"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 px-1 p-md-0 mb-2">
                    <div class="card h-100 card-body ml-lg-1 shadowBox py-0 px-0">
                        <div id="chartViewRight">
                            <div class="chart-container doughnutChartContainer">
                                <canvas id="branchChartRight"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>



