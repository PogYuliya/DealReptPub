@model BranchViewModel

@{
    ViewBag.Title = "Branches/Create";
}

@section Header{
    <div class="orangeLink dirtyLink">
        <a class="px-1 pb-1" asp-action="Index" data-target="#dirtyCheckModalIndex"><i class="fi-xnluxl-data-structure-thin"></i> Branches</a> <span class="lead align-middle text-nowrap">&sol; Create a Branch</span>
    </div>
}

@*Main*@
<section id="main">
    <div class="container">
        @*Upper Button Panel*@
        <section id="upperPanelButton">
            <div class="row">
                <div class="col-12 px-1 px-md-0">
                    <div class="card my-2">
                        <div class="card-header bg-white py-1">
                            <div class="col d-flex justify-content-center">
                                <span data-toggle="tooltip" data-trigger="hover" data-placement="top" title="To branches"
                                      class="dirtyLink">
                                    <a asp-action="Index" data-target="#dirtyCheckModalIndex"
                                       class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                        <i class="fi-xnllx2-arrow-simple"></i>
                                    </a>
                                </span>
                                <a asp-action="Create" class="scaleIcon btn btn-link p-0 text-warning mr-1"
                                   data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Clear the form">
                                    <i class="fi-xnlux2-times"></i>
                                </a>
                                <a href="#downPanelButton" data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Down"
                                   class="scaleIcon btn btn-link p-0 text-primary">
                                    <i class="fi-xnldx2-arrow-simple"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        @*Create*@

        <form asp-action="Create" method="post" class="dirty-check font-weight-light">
            <div asp-validation-summary="ModelOnly" class="validationSummary text-justify"></div>
            <div class="row">
                <div class="col-lg-12 px-1 px-md-0 mb-2">
                    <div class="card card-body shadowBox bodyCreate">
                        <div class="form-row">
                            <div class="form-group col-lg-5 col-md-6">
                                <label asp-for="Branch.Name"></label>
                                <input asp-for="Branch.Name" type="text" class="form-control pl-md-3">
                                <span asp-validation-for="Branch.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6">
                                <label asp-for="Branch.Code"></label>
                                <input asp-for="Branch.Code" type="text" class="form-control">
                                <span asp-validation-for="Branch.Code" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2 col-md-6">
                                <label asp-for="Branch.BranchTelephone"></label>
                                <input asp-for="Branch.BranchTelephone" type="tel" class="form-control pl-md-3 enabledTooltipOnTouch"
                                       data-toggle="tooltip" data-placement="top" title="Allowed format: +38XXXXXXXXXX, length:13">
                                <span asp-validation-for="Branch.BranchTelephone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3 col-md-6">
                                <label asp-for="Branch.BranchEmail"></label>
                                <input asp-for="Branch.BranchEmail" type="email" class="form-control pl-md-3">
                                <span asp-validation-for="Branch.BranchEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            @*Postal Address*@
            <div class="row">
                <div class="col-lg-6 px-1 px-md-0 mb-2 ">
                    <div class="card h-100 card-body mr-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead">Postal Address</legend>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.PostalIndex"></label>
                                    <input asp-for="Branch.PostalIndex" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.PostalIndex" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.CityID"></label>
                                    <select style="width:100%;" id="citySelect"
                                            asp-for="Branch.CityID"
                                            asp-items="@Model.Cities"
                                            class="form-control">
                                        <option value=""></option>
                                    </select>
                                    <span asp-validation-for="Branch.CityID" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.StreetBuilding"></label>
                                    <input asp-for="Branch.StreetBuilding" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.StreetBuilding" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                @*Head*@
                <div class="col-lg-6 px-1 px-md-0 mb-2 ">
                    <div class="card h-100 card-body ml-lg-1 shadowBox bodyCreate">
                        <fieldset>
                            <legend class="legend lead">
                                Head
                            </legend>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.HeadFirstName"></label>
                                    <input asp-for="Branch.HeadFirstName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.HeadFirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.HeadMiddleName"></label>
                                    <input asp-for="Branch.HeadMiddleName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.HeadMiddleName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.HeadLastName"></label>
                                    <input asp-for="Branch.HeadLastName" type="text" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.HeadLastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.HeadTelephone"></label>
                                    <input asp-for="Branch.HeadTelephone" type="tel" class="form-control pl-md-3 enabledTooltipOnTouch"
                                           data-toggle="tooltip" data-placement="top"
                                           title="Allowed format: +38XXXXXXXXXX, length:13">
                                    <span asp-validation-for="Branch.HeadTelephone" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Branch.HeadEmail"></label>
                                    <input asp-for="Branch.HeadEmail" type="email" class="form-control pl-md-3">
                                    <span asp-validation-for="Branch.HeadEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            @*Down Pannel Button*@
            <section id="downPanelButton">
                <div class="row">
                    <div class="col-12 px-1 px-md-0">
                        <div class="card mb-4">
                            <div id="cardFooter" class="card-header bg-white py-1">
                                <div class="col d-flex justify-content-center">
                                    <span data-toggle="tooltip" data-trigger="hover" data-placement="top" title="To branches" class="dirtyLink">
                                        <a asp-action="Index" data-target="#dirtyCheckModalIndex"
                                           class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                            <i class="fi-xnllx2-arrow-simple"></i>
                                        </a>
                                    </span>
                                    <button type="submit" class="scaleIcon btn btn-link text-success p-0 mr-0"
                                            data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Create a branch">
                                        <span role="img" class="p-1 pb-2">
                                            <svg fill="#20c975" width="26px" height="26px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M1827.701 303.065 698.835 1431.801 92.299 825.266 0 917.564 698.835 1616.4 1919.869 395.234z" fill-rule="evenodd" />
                                            </svg>
                                        </span>
                                    </button>
                                    <a href="#upperPanelButton" data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Up"
                                       class="scaleIcon btn btn-link p-0 text-primary ml-1">
                                        <i class="fi-xwlux2-arrow-simple"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</section>


@*Modals*@
@{await Html.RenderPartialAsync("_ModalDirtyChecklPartial", new ModelForDirtyCheckModal { ID = "dirtyCheckModalIndex", Controller = "Branches", Action = "Index", Entity = "Branch" });}




