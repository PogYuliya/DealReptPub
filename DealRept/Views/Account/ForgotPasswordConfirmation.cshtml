@{
    ViewBag.Title = "Forgot Password Confirmation";
}

@section Header{
        <i class="fi-xtluxl-sign-in-thin"></i> Forgot Password
}

<section id="forgotPasswordConfirmation">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto my-5 px-1">
                <div class="card p-5 card-body bg-primary scaleBlueButton">
                    <div class="card-title text-center">
                        <h2 class="text-white display-4">Forgot password confirmation</h2>
                    </div>
                    <div class="card-text lead text-white">
                        The link has been sent, please check your email to reset your password.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

