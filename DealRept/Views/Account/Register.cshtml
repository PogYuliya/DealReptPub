@model UserRegistrationViewModel
@inject ITooltipService ToolTipService
@{
    ViewBag.Title = "Registration";
}

@section Header{
        <i class="fi-xtluxl-user-plus-thin"></i> Registration
}

@*Main*@
<section id="main">
    <div class="container">
        @*Upper Button Panel*@
        <section id="upperPanelButton">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-4 col-md-6 px-1 px-md-0">
                    <div class="card my-2">
                        <div class="card-header d-flex justify-content-center bg-white py-1">
                            <span data-toggle="tooltip" data-placement="top" title="To a home page" data-trigger="hover" class="dirtyLink">
                                <a asp-controller="Home" asp-action="Index" data-target="#dirtyCheckModalIndex"
                                   class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                    <i class="fi-xnllx2-arrow-simple"></i>
                                </a>
                            </span>
                            <a asp-action="Register" class="scaleIcon btn btn-link p-0 text-warning mr-1"
                               data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Clear the form">
                                <i class="fi-xnlux2-times"></i>
                            </a>
                            <a href="#downPanelButton" data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Down"
                               class="scaleIcon btn btn-link p-0 text-primary">
                                <i class="fi-xnldx2-arrow-simple"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        @*Register*@


        <form asp-action="Register" method="post" class="dirty-check font-weight-light">

            <div class="row d-flex justify-content-center">
                <div asp-validation-summary="ModelOnly"
                class="px-1 px-lg-0 col-lg-4 col-md-6 text-justify font-weight-normal validationSummary"></div>
            </div>

            <div class="row d-flex justify-content-center">
                <div class="col-lg-4 col-md-6 px-1 px-md-0 mb-2">
                    <div class="card card-body shadowBox bodyCreate">
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" type="text" class="form-control pl-md-3">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="MiddleName"></label>
                                <input asp-for="MiddleName" type="text" class="form-control"
                                       data-toggle="tooltip" data-placement="top"
                                       title="Please enter Middle Name, only if you have it">
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" type="text" class="form-control">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="EmployeeNumber"></label>
                                <input asp-for="EmployeeNumber" type="text" class="form-control">
                                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" class="form-control"
                                       autocomplete="username">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" class="form-control inputPass disabledTooltipOnMd"
                                       autocomplete="new-password"
                                       data-toggle="tooltip" data-html="true" data-placement="right"
                                       title=@ToolTipService.ToolTipPassRequirements>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" type="password" 
                                       autocomplete="new-password"
                                 class="form-control inputPass" >
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row justify-content-center mb-2">
                            <div class="custom-control custom-checkbox text-center">
                                <input type="checkbox" class="custom-control-input"
                                       onclick="showPass()" id="passwordToggle">
                                <label class="custom-control-label" for="passwordToggle">Show Passwords</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*Down Pannel Button*@
            <section id="downPanelButton">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-4 col-md-6 px-1 px-md-0">
                        <div class="card mb-4">
                            <div id="cardFooter" class="card-header bg-white py-1">
                                <div class="col d-flex justify-content-center">
                                    <span data-toggle="tooltip" data-trigger="hover" data-placement="top" title="To a home page" class="dirtyLink">
                                        <a asp-controller="Home" asp-action="Index" data-target="#dirtyCheckModalIndex"
                                           class="scaleIcon btn btn-link p-0 text-primary mr-1">
                                            <i class="fi-xnllx2-arrow-simple"></i>
                                        </a>
                                    </span>
                                    <button type="submit" class="scaleIcon btn btn-link text-success p-0 mr-0"
                                            data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Register">
                                        <span role="img" class="p-1 pb-2">
                                            <svg fill="#20c975" width="26px" height="26px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M1827.701 303.065 698.835 1431.801 92.299 825.266 0 917.564 698.835 1616.4 1919.869 395.234z" fill-rule="evenodd" />
                                            </svg>
                                        </span>
                                    </button>
                                    <a href="#upperPanelButton" data-toggle="tooltip" data-placement="top" data-trigger="hover"
                                       title="Up" class="scaleIcon btn btn-link p-0 text-primary ml-1">
                                        <i class="fi-xwlux2-arrow-simple"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</section>

<!-- Modals -->
@{await Html.RenderPartialAsync("_ModalDirtyChecklPartial", new ModelForDirtyCheckModal { ID = "dirtyCheckModalIndex", Action = "Index", Entity = "User" });}

