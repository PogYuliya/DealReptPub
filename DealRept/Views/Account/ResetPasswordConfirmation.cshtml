@{
    ViewBag.Title = "Reset Password";
}

@section Header{
        <i class="fi-xtluxl-sign-in-thin"></i> Reset Password
}
<section id="resetPasswordConfirmation">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto my-5 px-1">
                <div class="card p-5 card-body bg-primary scaleBlueButton">
                    <div class="card-title text-center">
                        <h2 class="text-white display-4">Reset password confirmation</h2>
                    </div>
                    <div class="card-text lead text-white">
                        Your password has been reset. Please login<a class="btn btn-link text-white scaleIconHome" asp-controller="Account" asp-action="Login"
                           data-toggle="tooltip" data-trigger="hover" data-placement="top" title="Login">
                            <i class="fi-xtlux3-sign-in-thin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



