@model ContractViewModel

<div class="modal fade" id="overdueModal" tabindex="-1" aria-labelledby="overdueModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning font-weight-normal lead" id="overdueModalLabel">You can`t add or edit events!</h5>
                <button type="button" class="close scaleIcon focusWarning" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-warning">&times;</span>
                </button>
            </div>
            <div class="modal-body text-primary">
                This contract has expired; to add or edit its events, you should prolong it.
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button"
                class="btn btn-link font-weight-light px-4 text-white text-uppercase btn-modal-success mr-4"
                        data-dismiss="modal">Clear</button>
                <a asp-action="Edit" asp-route-id="@Model.Contract.ID" 
                   class="btn btn-link font-weight-light px-3 text-white text-uppercase btn-modal-warning ml-4">Prolong</a>
            </div>
        </div>
    </div>
</div>
