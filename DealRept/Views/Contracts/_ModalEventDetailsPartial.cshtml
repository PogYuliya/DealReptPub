@model ContractViewModel

<div class="modal fade" id="modalEventInfo" tabindex="-1" aria-labelledby="eventModalDetailLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="eventModalDetailLabel" class="modal-title text-primary text-center font-weight-normal lead">
                    Contract Event Details
                </h5>
                <button type="button" class="close scaleIcon focusWarning" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-primary">&times;</span>
                </button>
            </div>
            <div class="modal-body text-primary">
                @*Event Details*@
                <section>
                    <div id="eventDetails" class="row">
                        <div class="col px-1 p-md-0 mb-2">
                            <div class="card border-0 card-body mr-lg-1">
                                <div class="row">
                                    <div class="col-md-5 px-md-3">
                                        <h4 class="mb-0 mb-md-2"><span class="badge font-weight-light bodyCreate p-2" style="width: 100%;">Title:</span></h4>
                                    </div>
                                    <div id="detailsEventTitle" class="col-md-7 text-primary text-center text-md-left px-md-2 py-1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 px-md-3">
                                        <h4 class="mb-0 mb-md-2"><span class="badge font-weight-light bodyCreate p-2" style="width: 100%;">Is all day?:</span></h4>
                                    </div>
                                    <div id="detailsAllDay" class="col-md-7 text-primary text-center text-md-left px-md-2 py-1">
                                    </div>
                                </div>
                                <div class=" row">
                                    <div class="col-md-5 px-md-3 ">
                                        <h4 class="mb-0 mb-md-2"><span class="badge font-weight-light bodyCreate p-2" style=" width: 100%;">Start:</span></h4>
                                    </div>
                                    <div id="detailsEventStart" class="col-md-7 text-primary text-center text-md-left px-md-2 py-1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 px-md-3 ">
                                        <h4 class="mb-0 mb-md-2"><span class="badge font-weight-light bodyCreate p-2" style="width: 100%;">End (excl.):</span></h4>
                                    </div>
                                    <div id="detailsEventEnd" class="col-md-7 text-primary text-center text-md-left px-md-2 py-1">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 px-md-3 ">
                                        <h4 class="mb-0 mb-md-2"><span class="badge font-weight-light bodyCreate p-2" style="width: 100%;">Description:</span></h4>
                                    </div>
                                    <div id="detailsEventDescription" class="col-md-7 text-primary text-justify px-md-2 py-1">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div id="detailsModalFooter" class="modal-footer justify-content-center">
                @if (Model.Contract.ExpirationDate >= DateTime.Today.Date && Model.Contract.ContractStatus.Name == "Current")
                {
                    <a id="detailsEditBtn" role="button" class="scaleIcon btn btn-link p-0 text-success mr-1"
                       data-toggle="tooltip"
                       data-placement="top" data-trigger="hover" title="Edit the event">
                        <i class="fi-xnlux2-edit"></i>
                    </a>
                }
                <button type="button"
                        data-toggle="tooltip" data-placement="top" data-trigger="hover"
                        title="Close"
                        class="scaleIcon btn btn-link p-0 text-primary mr-1"
                        data-dismiss="modal">
                    <i class="fi-xnlux2-times"></i>
                </button>
                @if (Model.Contract.ExpirationDate >= DateTime.Today.Date && Model.Contract.ContractStatus.Name == "Current")
                {
                    <button id="detailsDeleteBtn" type="button"
                            data-toggle="tooltip" data-trigger="hover" data-placement="top" title="Delete the event"
                            class="scaleIcon btn btn-link text-warning p-0 mr-1">
                        <i class="fi-xnlux2-trash"></i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>
