@model ContractViewModel

<div class="modal fade" id="modalEventCreate" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="eventModalLabel" class="modal-title text-primary text-center font-weight-normal lead">Contract Event <span id="eventFunction"></span></h5>
                <button type="button" class="close scaleIcon focusWarning" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-primary">&times;</span>
                </button>
            </div>
            <form id="eventForm" method="post">
                <div class="modal-body text-primary">
                    @{
                        DateTime contractExpirationDate =
                        Model.Contract.ExpirationDate.Date;
                    }
                    <div class="card card-body mr-lg-1 shadowBox bodyCreate">
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="title">Title</label>
                                <input id="eventModalTitle" type="text"
                                       name="eventModalTitle"
                                       class="form-control text-justify" />
                            </div>
                        </div>
                        <div class="form-row mb-2">
                            <div id="allDayGroup" class="col pt-2 text-center my-auto custom-control custom-checkbox">
                                <input type="checkbox" id="allDay" name="allDay"
                                       data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls=".multi-collapse"
                                       class="custom-control-input" />
                                <label class="custom-control-label" for="allDay">All Day</label>
                            </div>
                        </div>
                        <div id="startDateAllDayContainer" class="form-row mb-2 collapse multi-collapse">
                            <div class="form-group col-md-6">
                                <label id="startDateAllDayLabel" for="startDateAllDay">Start</label>
                                <input id="startDateAllDay" type="date" name="startDateAllDay"
                                       min="@DateTime.Now.Date.ToString("yyyy-MM-dd")"
                                       max="@contractExpirationDate.ToString("yyyy-MM-dd")"
                                       class="form-control pl-md-3">
                            </div>
                            <div class="form-group col-md-6">
                                <label id="endDateAllDayLabel" for="endDateAllDay">End (excluding)</label>
                                <input id="endDateAllDay" type="date" name="endDateAllDay"
                                       max="@contractExpirationDate.AddDays(1).ToString("yyyy-MM-dd")"
                                       class="form-control pl-md-3">
                            </div>
                        </div>
                        <div id="startEndContainer" class="form-row collapse multi-collapse">
                            <div class="form-group col-md-6">
                                <label for="startDate">Start</label>
                                <input id="startDate" type="datetime-local" name="startDate"
                                       max="@contractExpirationDate.AddHours(23).ToString("s")"
                                       class="form-control pl-md-3 startEvent">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="endDate">End (excluding)</label>
                                <input id="endDate" type="datetime-local" name="endDate"
                                       max="@contractExpirationDate.AddDays(1).ToString("s")"
                                       class="form-control pl-md-3 endEvent">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label for="description">Description</label>
                                <textarea id="description" rows="1"
                                          name="description"
                                          class="form-control text-justify"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="createModalFooter" class="modal-footer justify-content-center">
                    <button data-toggle="tooltip" id="submitButton" type="submit" class="scaleIcon btn btn-link text-success p-0" data-trigger="hover" data-placement="top" title="Create an event">
                        <span role="img" class="p-1 pb-2">
                            <svg fill="#20c975" width="26px" height="26px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1827.701 303.065 698.835 1431.801 92.299 825.266 0 917.564 698.835 1616.4 1919.869 395.234z" fill-rule="evenodd" />
                            </svg>
                        </span>
                    </button>
                    <button type="button"
                            data-toggle="tooltip" data-placement="top" data-trigger="hover"
                            title="Cancel"
                            class="scaleIcon btn btn-link p-0 text-warning mr-1"
                            data-dismiss="modal">
                        <i class="fi-xnlux2-times"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
